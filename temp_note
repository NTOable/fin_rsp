<script>
// --- Sample dataset (replace with real data / API) ---
const items = [
{ sku: 'SKU-1001', name: 'Premium Notebook A5', category: 'Stationery', supplier: 'PaperWorks', stock: 320, unitPrice: 3.5, updated: '2025-11-01' },
{ sku: 'SKU-1002', name: 'Gel Pen 0.5mm', category: 'Stationery', supplier: 'InkFlow', stock: 45, unitPrice: 0.8, updated: '2025-11-06' },
{ sku: 'SKU-1003', name: 'Wireless Mouse', category: 'Electronics', supplier: 'TechSource', stock: 0, unitPrice: 18.0, updated: '2025-11-03' },
{ sku: 'SKU-1004', name: 'Keyboard Mechanical', category: 'Electronics', supplier: 'TechSource', stock: 12, unitPrice: 45.0, updated: '2025-11-07' },
{ sku: 'SKU-1005', name: 'Office Chair Ergonomic', category: 'Furniture', supplier: 'SitWell', stock: 8, unitPrice: 120.0, updated: '2025-11-02' },
{ sku: 'SKU-1006', name: 'Desk Lamp LED', category: 'Electronics', supplier: 'BrightLite', stock: 110, unitPrice: 22.0, updated: '2025-11-05' },
{ sku: 'SKU-1007', name: 'Storage Box L', category: 'Supplies', supplier: 'StoreMore', stock: 64, unitPrice: 9.2, updated: '2025-11-04' },
{ sku: 'SKU-1008', name: 'Packing Tape', category: 'Supplies', supplier: 'BondIt', stock: 510, unitPrice: 1.1, updated: '2025-11-07' },
{ sku: 'SKU-1009', name: 'Label Printer', category: 'Electronics', supplier: 'PrintMaster', stock: 5, unitPrice: 85.0, updated: '2025-10-29' },
{ sku: 'SKU-1010', name: 'Filing Cabinet 3-Drawer', category: 'Furniture', supplier: 'CabinetCo', stock: 2, unitPrice: 160.0, updated: '2025-11-02' },
{ sku: 'SKU-1011', name: 'Stapler Heavy Duty', category: 'Stationery', supplier: 'PaperWorks', stock: 24, unitPrice: 6.5, updated: '2025-11-06' },
{ sku: 'SKU-1012', name: 'Copy Paper A4 80gsm', category: 'Stationery', supplier: 'PaperWorks', stock: 780, unitPrice: 4.2, updated: '2025-11-07' },
{ sku: 'SKU-1013', name: 'USB-C Dock', category: 'Electronics', supplier: 'TechSource', stock: 14, unitPrice: 72.0, updated: '2025-11-05' },
{ sku: 'SKU-1014', name: 'Conference Table', category: 'Furniture', supplier: 'FurniPro', stock: 1, unitPrice: 520.0, updated: '2025-10-28' },
{ sku: 'SKU-1015', name: 'Whiteboard 90x120', category: 'Supplies', supplier: 'EduTools', stock: 26, unitPrice: 34.0, updated: '2025-11-01' },
];

const LOW_THRESHOLD = 10;

// --- State ---
let filtered = [...items];
let sortBy = null;
let sortAsc = true;

// --- Elements ---
const tbody = document.querySelector('#inventoryTable tbody');
const kpiTotalItems = document.getElementById('kpiTotalItems');
const kpiTotalUnits = document.getElementById('kpiTotalUnits');
const kpiStockValue = document.getElementById('kpiStockValue');
const kpiLowOut = document.getElementById('kpiLowOut');

const searchInput = document.getElementById('searchInput');
const categoryFilter = document.getElementById('categoryFilter');
const statusFilter = document.getElementById('statusFilter');
const supplierFilter = document.getElementById('supplierFilter');
const resetFilters = document.getElementById('resetFilters');

const btnExport = document.getElementById('btnExport');
const btnAdd = document.getElementById('btnAdd');

// --- Utils ---
const fmtCurrency = (n) => '$' + n.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
const statusOf = (stock) => stock <= 0 ? 'out' : (stock <= LOW_THRESHOLD ? 'low' : 'ok');

// --- Populate filters ---
function initFilters() {
const categories = Array.from(new Set(items.map(i => i.category))).sort();
const suppliers = Array.from(new Set(items.map(i => i.supplier))).sort();
categoryFilter.innerHTML = '<option value="">All categories</option>' + categories.map(c => `<option value="${c}">${c}</option>`).join('');
supplierFilter.innerHTML = '<option value="">All suppliers</option>' + suppliers.map(s => `<option value="${s}">${s}</option>`).join('');
}

// --- Render table ---
function renderTable() {
tbody.innerHTML = '';
filtered.forEach(item => {
const tr = document.createElement('tr');
const totalValue = item.stock * item.unitPrice;
const st = statusOf(item.stock);
tr.innerHTML = `
<td>${item.sku}</td>
<td>${item.name}</td>
<td>${item.category}</td>
<td>${item.supplier}</td>
<td>${item.stock}</td>
<td>${fmtCurrency(item.unitPrice)}</td>
<td>${fmtCurrency(totalValue)}</td>
<td>
<span class="status ${st}">
${st === 'ok' ? '<i class="ti ti-circle-check"></i>' : st === 'low' ? '<i class="ti ti-alert-triangle"></i>' : '<i class="ti ti-circle-off"></i>'}
${st === 'ok' ? 'In stock' : st === 'low' ? 'Low' : 'Out'}
</span>
</td>
<td>${item.updated}</td>
`;
tbody.appendChild(tr);
});
}

// --- KPIs ---
function renderKPIs() {
const totalItems = filtered.length;
const totalUnits = filtered.reduce((sum, i) => sum + i.stock, 0);
const stockValue = filtered.reduce((sum, i) => sum + i.stock * i.unitPrice, 0);
const lowOut = filtered.filter(i => statusOf(i.stock) !== 'ok').length;

kpiTotalItems.textContent = totalItems.toLocaleString();
kpiTotalUnits.textContent = totalUnits.toLocaleString();
kpiStockValue.textContent = fmtCurrency(stockValue);
kpiLowOut.textContent = lowOut.toLocaleString();
}

// --- Charts ---
let categoryChart, statusChart, movementChart, topValueChart;

function buildCategoryData(itemsArr) {
const map = new Map();
itemsArr.forEach(i => map.set(i.category, (map.get(i.category) || 0) + i.stock));
return Array.from(map.entries()).sort((a,b)=>b[1]-a[1]);
}
function buildStatusData(itemsArr) {
const map = { ok: 0, low: 0, out: 0 };
itemsArr.forEach(i => map[statusOf(i.stock)]++);
return map;
}
function buildTopValue(itemsArr, n = 5) {
return [...itemsArr]
.map(i => ({ name: i.name, value: i.stock * i.unitPrice }))
.sort((a,b)=>b.value-a.value)
.slice(0, n);
}

function renderCharts() {
// Category breakdown
const catData = buildCategoryData(filtered);
const catLabels = catData.map(([c]) => c);
const catValues = catData.map(([,v]) => v);

if (categoryChart) categoryChart.destroy();
categoryChart = new Chart(document.getElementById('categoryChart'), {
type: 'bar',
data: {
labels: catLabels,
datasets: [{
label: 'Stock units',
data: catValues,
backgroundColor: '#2563eb'
}]
},
options: {
responsive: true,
maintainAspectRatio: false,
scales: {
x: { grid: { display: false } },
y: { beginAtZero: true, grid: { color: '#eee' } }
},
plugins: {
legend: { display: false },
tooltip: { mode: 'index', intersect: false }
}
}
});

// Status distribution
const stData = buildStatusData(filtered);
if (statusChart) statusChart.destroy();
statusChart = new Chart(document.getElementById('statusChart'), {
type: 'doughnut',
data: {
labels: ['In stock', 'Low', 'Out'],
datasets: [{
data: [stData.ok, stData.low, stData.out],
backgroundColor: ['#16a34a', '#f59e0b', '#dc2626']
}]
},
options: {
responsive: true,
maintainAspectRatio: false,
plugins: {
legend: { position: 'bottom' }
},
cutout: '60%'
}
});

// Monthly movement (sample synthetic data)
const months = ['May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov'];
const received = [420, 500, 380, 460, 520, 430, 480];
const issued = [360, 450, 410, 390, 500, 420, 470];

if (movementChart) movementChart.destroy();
movementChart = new Chart(document.getElementById('movementChart'), {
type: 'line',
data: {
labels: months,
datasets: [
{ label: 'Received', data: received, borderColor: '#2563eb', backgroundColor: 'rgba(37,99,235,0.15)', tension: 0.3, fill: true },
{ label: 'Issued', data: issued, borderColor: '#0ea5e9', backgroundColor: 'rgba(14,165,233,0.15)', tension: 0.3, fill: true }
]
},
options: {
responsive: true,
maintainAspectRatio: false,
plugins: { legend: { position: 'bottom' } },
scales: {
x: { grid: { display: false } },
y: { beginAtZero: true, grid: { color: '#eee' } }
}
}
});

// Top items by value
const topItems = buildTopValue(filtered, 6);
if (topValueChart) topValueChart.destroy();
topValueChart = new Chart(document.getElementById('topValueChart'), {
type: 'bar',
data: {
labels: topItems.map(t => t.name),
datasets: [{ label: 'Total value', data: topItems.map(t => t.value), backgroundColor: '#1d4ed8' }]
},
options: {
indexAxis: 'y',
responsive: true,
maintainAspectRatio: false,
plugins: { legend: { display: false } },
scales: {
x: { grid: { color: '#eee' } },
y: { grid: { display: false } }
}
}
});
}

// --- Filtering and sorting ---
function applyFilters() {
const q = searchInput.value.trim().toLowerCase();
const cat = categoryFilter.value;
const st = statusFilter.value;
const sup = supplierFilter.value;

filtered = items.filter(i => {
const matchesQ = !q || `${i.sku} ${i.name} ${i.supplier}`.toLowerCase().includes(q);
const matchesCat = !cat || i.category === cat;
const matchesSup = !sup || i.supplier === sup;
const matchesSt = !st || statusOf(i.stock) === st;
return matchesQ && matchesCat && matchesSup && matchesSt;
});

if (sortBy) {
filtered.sort((a, b) => {
let va = a[sortBy], vb = b[sortBy];
if (typeof va === 'string') { va = va.toLowerCase(); vb = vb.toLowerCase(); }
if (va < vb) return sortAsc ? -1 : 1;
if (va > vb) return sortAsc ? 1 : -1;
return 0;
});
}

renderTable();
renderKPIs();
renderCharts();
}

// --- Events ---
function bindEvents() {
searchInput.addEventListener('input', applyFilters);
categoryFilter.addEventListener('change', applyFilters);
statusFilter.addEventListener('change', applyFilters);
supplierFilter.addEventListener('change', applyFilters);
resetFilters.addEventListener('click', () => {
searchInput.value = '';
categoryFilter.value = '';
statusFilter.value = '';
supplierFilter.value = '';
applyFilters();
});

// Sorting
document.querySelectorAll('#inventoryTable thead .btn[data-sort]').forEach(btn => {
btn.addEventListener('click', () => {
const key = btn.getAttribute('data-sort');
if (sortBy === key) { sortAsc = !sortAsc; } else { sortBy = key; sortAsc = true; }
applyFilters();
});
});

// Export CSV
btnExport.addEventListener('click', () => {
const rows = [
['SKU','Name','Category','Supplier','Stock','Unit Price','Total Value','Status','Updated'],
...filtered.map(i => [
i.sku, i.name, i.category, i.supplier, i.stock, i.unitPrice,
(i.stock * i.unitPrice).toFixed(2), statusOf(i.stock), i.updated
])
];
const csv = rows.map(r => r.map(v => `"${String(v).replace(/"/g,'""')}"`).join(',')).join('\n');
const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
const url = URL.createObjectURL(blob);
const a = document.createElement('a');
a.href = url; a.download = 'inventory_export.csv';
document.body.appendChild(a); a.click(); document.body.removeChild(a);
URL.revokeObjectURL(url);
});

// Add item (demo)
btnAdd.addEventListener('click', () => {
const sku = 'SKU-' + Math.floor(1000 + Math.random()*9000);
const demo = { sku, name: 'New Item ' + Math.floor(Math.random()*100), category: 'Supplies', supplier: 'DemoSupplier', stock: Math.floor(Math.random()*50), unitPrice: +(Math.random()*50).toFixed(2), updated: new Date().toISOString().slice(0,10) };
items.push(demo);
initFilters();
applyFilters();
});
}

// --- Init ---
initFilters();
bindEvents();
applyFilters();
</script>
</body>
</html>